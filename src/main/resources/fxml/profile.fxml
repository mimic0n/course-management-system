<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.coursemanagement.controller.ProlifeController"
      prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #f8f9fa;">
    <children>
        <!-- Header -->
        <HBox alignment="CENTER_LEFT"
              style="-fx-background-color: white; -fx-border-color: #e9ecef; -fx-border-width: 0 0 1 0; -fx-padding: 20 30;">
            <children>
                <Label text="ðŸ‘¤ Profile Management" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" />
            </children>
        </HBox>

        <!-- Content -->
        <VBox alignment="CENTER" spacing="30.0" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
            </padding>
            <children>
                <VBox spacing="20.0"
                      style="-fx-background-color: white; -fx-padding: 40; -fx-border-radius: 15; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                    <children>
                        <Label text="Update Your Information"
                               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" />

                        <VBox spacing="15.0">
                            <children>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Username" style="-fx-font-size: 14px; -fx-text-fill: #6c757d; -fx-font-weight: bold;" />
                                        <TextField fx:id="usernameField"
                                                   style="-fx-padding: 12; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-background-radius: 8; -fx-background-color: #f8f9fa;" />
                                    </children>
                                </VBox>

                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Email Address" style="-fx-font-size: 14px; -fx-text-fill: #6c757d; -fx-font-weight: bold;" />
                                        <TextField fx:id="emailField"
                                                   style="-fx-padding: 12; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-background-radius: 8;" />
                                    </children>
                                </VBox>

                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Full Name" style="-fx-font-size: 14px; -fx-text-fill: #6c757d; -fx-font-weight: bold;" />
                                        <TextField fx:id="fullNameField"
                                                   style="-fx-padding: 12; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-background-radius: 8;" />
                                    </children>
                                </VBox>
                            </children>
                        </VBox>

                        <HBox alignment="CENTER" spacing="15.0">
                            <children>
                                <Button onAction="#saveProfile" prefWidth="150.0" text="Save Changes"
                                        style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-padding: 12 20; -fx-border-radius: 25; -fx-background-radius: 25; -fx-font-size: 14px; -fx-font-weight: bold;" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</VBox>